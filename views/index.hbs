<html>
  <head>
    <meta charset='utf-8' />
    <title>App</title>
    <link rel='stylesheet' href='/public/styles.css' />
  </head>
  <body>
    <div class='container'>
      <h1>Введите реквизиты</h1>
      <form id='singleInputForm' onsubmit='onSubmit(event)'>
        <div class='form-group'>
          <input
            type='text'
            id='cardNumber'
            name='cardNumber'
            placeholder='Введите номер карты'
            required
          />
        </div>
        <button type='submit'>Отправить</button>
      </form>
      <div id='message' class='message'></div>
    </div>
  </body>
  <script>window.APP_CONFIG = { EXTERNAL_HOST: '{{host}}' };</script>
  <script defer src='/public/index.js'></script>
</html>
